{
  "compilerOptions": {
    "module": "umd",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es2015", "es2017", "dom"],
    "noImplicitAny": false,
    "sourceMap": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "./typescript",
    "./test/typescript"
  ]
}